<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="customer_report"
        pageWidth="595" pageHeight="842"
        columnWidth="555"
        leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Nếu muốn truyền tham số từ Java -->
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="createdBy" class="java.lang.String"/>

    <!-- Fields tương ứng với thuộc tính của Customer (name, email, phone) -->
    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="phoneNumber" class="java.lang.String"/>

    <!-- Title band — tiêu đề của báo cáo -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Báo Cáo Danh Sách Khách Hàng]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{reportTitle} + " — created by: " + $P{createdBy}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column header — tên các cột -->
    <columnHeader>
        <band height="25">

            <staticText>
                <reportElement x="60"  y="0" width="200" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Name]]></text>
            </staticText>
            <staticText>
                <reportElement x="270" y="0" width="200" height="20"/>
               <textElement>
                   <font isBold="true"/>
               </textElement>
                <text><![CDATA[Email]]></text>
            </staticText>
            <staticText>
                <reportElement x="480" y="0" width="75"  height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Phone Number]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail band — dữ liệu mỗi dòng khách hàng -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="60" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="270" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="480" y="0" width="75"  height="20"/>
                <textFieldExpression><![CDATA[$F{phoneNumber}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- (Tùy chọn) Page footer — ví dụ số trang -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER} + " / " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
